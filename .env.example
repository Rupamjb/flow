# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here

# Flow Detection Settings
FLOW_TRIGGER_MINUTES=10
OVERLAY_COUNTDOWN_SECONDS=10

# XP System
XP_PER_MINUTE=10
XP_BONUS_RESILIENCE=50
XP_PENALTY_BREAK=-50

# Progressive Overload
OVERLOAD_MULTIPLIER=1.05

# Distraction Apps (comma-separated window titles)
DISTRACTION_APPS=Steam,Instagram,Facebook,Twitter,Reddit,YouTube

# Focus Apps (comma-separated window titles)
FOCUS_APPS=Visual Studio Code,PyCharm,Sublime Text,Notepad++,Chrome - Stack Overflow
